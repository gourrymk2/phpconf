<div id="staffs">
    <% foreach $jobs as $job %>
    <section>
        <header>
        <h1><% $job->name|escape %></h1>
        </header>
        <ul>
            <% foreach $staffs as $staff %>
            <% if $staff->jobId === $job->id %>
            <li><% $staff->name|escape %></li>
            <% /if %>
            <% /foreach %>
        </ul>
    </section>
    <% /foreach %>
</div>