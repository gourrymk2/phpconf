<!doctype html>
<html class="no-js" lang="zh-TW">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; minimum-scale=1.0; user-scalable=0;" />
        <link href="<% $this->baseUrl() %>/img/apple-touch-icon.png" rel="apple-touch-icon" />
        <link rel="stylesheet" href="<% $this->baseUrl() %>/css/mobile.css" media="handheld, screen" />
        <title>PHPConf Taiwan <% $conference->year %></title>
    </head>
    <body>

        <div data-role="page" id="announcements">
            <div data-role="header" data-theme="b">
                <h1>PHPConf Taiwan <% $conference->year %></h1>
            </div>
            <div data-role="content" class="block" style="text-align: center;">
                <img src="<% $this->baseUrl() %>/img/logo.jpg" />
            </div>
            <% foreach $announcements as $announcement %>
            <div data-role="content" class="block">
                <h1><% $announcement->title|escape %></h1>
                <div class="content"><% $announcement->content %></div>
            </div>
            <% /foreach %>

            <div data-role="footer" data-position="fixed" data-theme="b">
                <div data-role="navbar" class="custom-icon">
                    <ul>
                        <li><a href="#announcements" data-icon="custom" class="announcements ui-btn-active">公告</a></li>
                        <li><a href="#sessions" data-icon="custom" data-transition="slide" class="sessions">議程</a></li>
                        <li><a href="#location" data-icon="custom" data-transition="slide" class="location">地點</a></li>
                    </ul>
                </div><!-- /navbar -->
            </div><!-- /footer -->
        </div>
        <div data-role="page" id="sessions">
            <div data-role="header" data-theme="b">
                <h1>議程</h1>
            </div>
            <div data-role="content" class="block" style="text-align: center;">
                <img src="<% $this->baseUrl() %>/img/logo.jpg" />
            </div>
            <div data-role="content" class="block">
                <ul>
                    <% foreach $sessions as $session %>
                    <li <% if null !== $session->talker %>class="<% cycle values="alt," %>"<% else %>class="break"<% /if %>>
                        <p>
                            <span class="subject"><% $session->subject|escape %></span>
                            <span class="startTime"><% $session->startTime|escape %></span>
                            ~
                            <span class="endTime"><% $session->endTime|escape %></span>
                            <% if null !== $session->talker %>
                            <span class="talker"><% $session->talker|escape %></span>
                            <% /if %>
                        </p>
                        <div class="brief"><% $session->brief %></div>
                    </li>
                    <% /foreach %>
                </ul>
            </div>
            <div data-role="footer" data-theme="b">
                <div data-role="navbar" class="custom-icon">
                    <ul>
                        <li><a href="#announcements" data-icon="custom" data-transition="slide" class="announcements">公告</a></li>
                        <li><a href="#sessions" data-icon="custom" class="sessions ui-btn-active">議程</a></li>
                        <li><a href="#location" data-icon="custom" data-transition="slide" class="location">地點</a></li>
                    </ul>
                </div><!-- /navbar -->
            </div><!-- /footer -->
        </div>
        <div data-role="page" id="location">
            <div data-role="header" data-theme="b">
                <h1>會場地點</h1>
            </div>
            <div data-role="content" class="block" style="text-align: center;">
                <img src="<% $this->baseUrl() %>/img/logo.jpg" />
            </div>
            <div data-role="content" class="block min-height">
                <p><% $conference->location|escape %></p>
                <p><a href="http://maps.google.com/maps?q=<% $conference->address|escape %>"><% $conference->address|escape %></a></p>
                <% $conference->traffic %>
            </div>
            <div data-role="footer" data-position="fixed" data-theme="b">
                <div data-role="navbar" class="custom-icon">
                    <ul>
                        <li><a href="#announcements" data-icon="custom" data-transition="slide" class="announcements">公告</a></li>
                        <li><a href="#sessions" data-icon="custom" data-transition="slide"class="sessions">議程</a></li>
                        <li><a href="#location" data-icon="custom" class="location ui-btn-active">地點</a></li>
                    </ul>
                </div><!-- /navbar -->
            </div><!-- /footer -->
        </div>
        <script type="application/x-javascript" src="<% $this->baseUrl() %>/js/jquery-1.6.4.min.js"></script>
        <script type="application/x-javascript" src="<% $this->baseUrl() %>/js/jquery.mobile-1.0rc1.min.js"></script>
    </body>
</html>